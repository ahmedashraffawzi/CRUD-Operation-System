@model ForgetPaswwordViewModel
@{
    ViewData["Title"] = "ForgetPassword";
    Layout = "~/Views/Shared/_AuthLayout.cshtml";
}
<div class="main-agileinfo">
	<div class="agileits-top">
		<form asp-action="SendEmail">
			<div asp-validation-summary="All"></div>


			<input class="text" asp-for="Email" placeholder="Email" required="" />
			<span asp-validation-for="Email"></span>
			<br />
			<input type="submit" value="ResetPassword">
		</form>
	</div>
</div>
@section ValidationScriptSection
	{
	<partial name="_ValidationScriptsPartial" />
}

